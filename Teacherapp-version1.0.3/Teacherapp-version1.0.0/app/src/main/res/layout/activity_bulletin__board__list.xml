<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kit.c_learning.teacherapp.Bulletin_Board_List">

    <android.support.v7.widget.Toolbar
        android:id="@+id/bulletinBoard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teacherColor"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <include
        android:layout_below="@id/bulletinBoard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_main"
        android:id="@+id/include"></include>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plusFloatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/teacherColor"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:src="@drawable/ic_action_plus"/>
</RelativeLayout>
