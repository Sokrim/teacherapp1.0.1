<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kit.c_learning.teacherapp.Make_Thread">

    <android.support.v7.widget.Toolbar
        android:id="@+id/threadToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teacherColor"
        android:transitionName="threadToolbar"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.v7.widget.Toolbar>

    <include
        android:layout_below="@id/threadToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/content_main"></include>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_edit_black"
        app:borderWidth="0dp"
        app:backgroundTint="@color/teacherColor"
        app:fabSize="normal" />
</RelativeLayout>
